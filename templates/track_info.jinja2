<html lang="de">
<head>
    <script src="https://kit.fontawesome.com/c9b9f55395.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: sans-serif;
            font-size: 1.2em;
            overflow: hidden;
            background-color: #ffffff;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .conf {
            max-height: 90%;
            min-height: 40%;
            width: 90%;
            margin-left: auto;
            margin-right: auto;
            margin-top: 3%;
            padding-left: 10px;
        }

        .VCBM {
            font-family: sans-serif;
            border-left: 5px solid #0693e3;
        }

        .VCBM i {
            color: #0693e3;
        }

        .VMV {
            font-family: sans-serif;
            border-left: 5px solid #F7B728;
        }

        .VMV i {
            color: #F7B728;
        }

        .GCPR {
            font-family: sans-serif;
            border-left: 5px solid #cf2e2e;
        }

        .GCPR i {
            color: #cf2e2e
        }

        .JOINT {
            font-family: sans-serif;
            border-left: 5px solid #68E02F;
        }

        .JOINT i {
            color: #68E02F;
        }

        .VMVVCBM {
            font-family: sans-serif;
            border-left: 5px solid #9f44fa;
        }

        .VMVVCBM i {
            color: #9f44fa;
        }

        .fa-discord {
            color: #7289da !important;
        }

        .fa-youtube {
            color: #ff0000 !important;
        }

        .conf table {
            width: 90%;
            font-size: 0.8em;
            margin-top: 10px;
        }

        .conf table td {
            margin: 10px;
            padding: 15px;
        }

        td i {
            font-size: 2em;
            display: block;
            text-align: center;
        }

        .conf table tr:nth-child(odd) {
            background-color: #dddddd;
        }

        .conf table td:first-child {
            text-align: center;
        }


        .tracktimes {
            font-size: 1.1em;
            display: inline;
        }

        .item_times {
            font-size: 1em;
        }

        h4 {
            margin: 10px;
            padding: 15px;
            display: inline-block;
        }

        h3 {
            display: inline;
            font-size: 1.3em;
        }

        .links_fixed {
            position: absolute;
            bottom: 5%;
            width: 100%;
            max-height: 10%;
            height: auto;
            text-align: center;
        }

        .links_fixed h4 {
            margin-bottom: 0;
            font-family: monospace; /* make URLs more readable */
        }

        .links_fixed h4 i {
            margin-right: 20px;
            font-size: 1.4em;
            text-align: center;
        }

        .links_fixed li i {
            margin-right: 0;
        }

        .links_fixed ul {
            list-style-type: none;
        }

        .links_fixed ul li {
            margin-right: 10px;
            font-size: 0.8em;
            display: inline;
            padding-right: 5px;
            border-right: 1px solid #cccccc;
        }

        .author {
            font-size: 1em;
            margin-top: 5px;
            margin-bottom: 0;
        }

        .title {
            font-weight: bolder;
            margin-top: 5px;
            font-size: 1.1em;
        }

        #logo {
            width: 100px;
            height: 100px;
            position: fixed;
            top: 20px;
            right: 20px;
            background-image: url("logo.png");
            background-size: contain;
            background-repeat: no-repeat; /* for pdf compatibility */
        }


    </style>
    <meta charset="utf-8">
</head>
<body>
    <div id="logo">&nbsp;</div>
    <div class="conf {{ conference }}">
        <p class="tracktimes">{{ start_time }}-{{ end_time }}</p>
        <h3>{{ track_title }}</h3>
        <table>
        {% for key, entry in entries.items() if entries.items()| length > 1 %}
            <tr>
                <td><i class="{{ entry["oral_spotlight_poster"] }}"></i></td>
                <td><p class="item_times">{{ entry["start"] }}-{{ entry["end"] }}</p>
                    <p class="author">{{ entry["author"] }}</p><p class="title">{{ entry["title"] }}</p>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
    <div class="links_fixed">
            <h4><i class="fab fa-discord"></i>Discord: {{ discord }}</h4>&nbsp;
            <h4><i class="fab fa-youtube"></i>Youtube: {{ youtube }}</h4>
        <ul>
            <li><i class="{{ icons['oral'] }}"></i>&nbsp; Oral</li>
            <li><i class="{{ icons['spotlight'] }}"></i>&nbsp; Spotlight</li>
            <li><i class="{{ icons['poster'] }}"></i>&nbsp; Poster</li>
            <li><i class="{{ icons['paper'] }}"></i>&nbsp; Paper</li>
            <li><i class="{{ icons['short'] }}"></i>&nbsp;Short paper</li>
            <li><i class="{{ icons['social'] }}"></i>&nbsp; Social</li>
        </ul>
    </div>
</body>
</html>